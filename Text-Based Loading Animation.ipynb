   "source": [
    "import sys\n",
    "import time\n",
    "\n",
    "animation = \"|/-\\\\\"\n",
    "\n",
    "for i in range(20):  # Number of iterations\n",
    "    sys.stdout.write(\"\\r\" + animation[i % len(animation)])\n",
    "    sys.stdout.flush()\n",
    "    time.sleep(0.1)\n",
    "\n",
    "print(\"\\rDone!\")"
   ]
  }
